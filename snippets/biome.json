			"    \"ignoreUnknown\": true,",
			"    \"includes\": [\"**\", \"!node_modules\", \"!.next\", \"!dist\", \"!build\"]",
			"  },",
			"  \"formatter\": {",
			"    \"enabled\": true,",
			"    \"indentStyle\": \"space\",",
			"    \"indentWidth\": 2,",
			"    \"lineWidth\": 100",
			"  },",
			"  \"css\": {",
			"    \"parser\": {",
			"      \"tailwindDirectives\": true",
			"    }",
			"  },",
			"  \"javascript\": {",
			"    \"formatter\": {",
			"      \"quoteStyle\": \"double\",",
			"      \"jsxQuoteStyle\": \"double\",",
			"      \"semicolons\": \"always\",",
			"      \"trailingCommas\": \"all\",",
